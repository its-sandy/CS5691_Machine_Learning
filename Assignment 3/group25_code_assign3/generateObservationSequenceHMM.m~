fprintf("read input\n");
%%%%%%%%%%%%%%%%%%%%%
[train_ind, test_ind] = dividerand(N_a, 0.7, 0.3);
train_a = zeros(0,3);
for i = train_ind
    train_a = [train_a; data_a(data_a(:,3) == i,:)];
end
test_a = zeros(0,3);
for i = test_ind
    test_a = [test_a; data_a(data_a(:,3) == i,:)];
end
%%%%%%%%%%%%%%%%%%%%%
[train_ind, test_ind] = dividerand(N_ai, 0.7, 0.3);
train_ai = zeros(0,3);
for i = train_ind
    train_ai = [train_ai; data_ai(data_ai(:,3) == i,:)];
end
