train_da = zeros(0,3);
for i = train_ind
    train_da = [train_da; data_da(data_da(:,3) == i,:)];
end
test_da = zeros(0,3);
for i = test_ind
    test_da = [test_da; data_da(data_da(:,3) == i,:)];
end
